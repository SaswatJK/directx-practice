cbuffer simpleUB : register(b0){
    float4 color;
    float4 metallic;
};

struct PSInput{
    float4 position : SV_POSITION;
};

Texture2D myTexture : register(t0);
SamplerState mySampler : register(s0);

float4 PSMain(PSInput input) : SV_TARGET {
    float2 dummyUV = float2(0.5, 0.5); // Sample from the center
    float4 finalColor = color + metallic;
    finalColor = myTexture.Sample(mySampler, dummyUV);
    return finalColor;
}
